{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "maxLength": 160,
          "errorMessage": {
            "maxLength": "Description should be under 160 characters for SEO"
          }
        },
        "pubDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "author": {
          "type": "string",
          "default": "Sal Castoro"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "category": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "heroImage": {
          "type": "string"
        },
        "heroImageAlt": {
          "type": "string"
        },
        "ogImage": {
          "type": "string"
        },
        "ogImageAlt": {
          "type": "string"
        },
        "metaTitle": {
          "type": "string"
        },
        "canonicalURL": {
          "type": "string",
          "format": "uri"
        },
        "noindex": {
          "type": "boolean",
          "default": false
        },
        "nofollow": {
          "type": "boolean",
          "default": false
        },
        "readingTime": {
          "type": "number"
        },
        "difficulty": {
          "type": "string",
          "enum": [
            "beginner",
            "intermediate",
            "advanced"
          ]
        },
        "twitterCard": {
          "type": "string",
          "enum": [
            "summary",
            "summary_large_image"
          ],
          "default": "summary_large_image"
        },
        "relatedPosts": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "series": {
          "type": "string"
        },
        "seriesOrder": {
          "type": "number"
        },
        "estimatedReadingTime": {
          "type": "number"
        },
        "wordCount": {
          "type": "number"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "pubDate"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}