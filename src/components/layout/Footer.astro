  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' }
];
---

<footer class="mt-auto bg-[var(--color-bg-secondary)] border-t border-[var(--color-border-default)]" role="contentinfo">
  <div class="container py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="space-y-4">
        <div class="flex items-center">
          <svg
            width="24"
            height="24"
            viewBox="0 0 32 32"
            class="text-[var(--color-accent-primary)] flex-shrink-0"
            role="img"
            aria-label="Personal blog logo"
          >
            <rect width="32" height="32" rx="8" fill="currentColor" opacity="0.1"/>
            <circle cx="16" cy="16" r="6" fill="currentColor"/>
          </svg>
        </div>
        <p class="text-sm text-[var(--color-text-secondary)] max-w-sm leading-relaxed">
          Sharing insights on web development, technology, and creative projects. 
          Building better experiences, one post at a time.
        </p>
      </div>
      
      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="font-semibold text-[var(--color-text-primary)]">Quick Links</h3>
        <nav 
          class="flex flex-col gap-3"
          aria-label="Footer navigation"
        >
          {footerLinks.map(({ href, label }) => (
            <a 
              href={href} 
              class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-accent-primary)] transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-border-focus)] focus-visible:ring-offset-2 rounded-sm"
            >
              {label}
            </a>
          ))}
        </nav>
      </div>
      
      <!-- Social Links -->
      <div class="space-y-4">
        <h3 class="font-semibold text-[var(--color-text-primary)]">Connect</h3>
        <div class="flex gap-4">
          {socialLinks.map(({ name, href, icon }) => (
            <a 
              href={href}
              class="p-2 rounded-md text-[var(--color-text-secondary)] hover:text-[var(--color-accent-primary)] hover:bg-[var(--color-bg-muted)] transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-border-focus)] focus-visible:ring-offset-2"
              aria-label={`Follow on ${name}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg 
                width="20" 
                height="20" 
                fill="currentColor" 
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path d={icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-[var(--color-border-default)]">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-[var(--color-text-muted)]">
        <p>
          &copy; {currentYear} Sal Castoro. All rights reserved.
        </p>
        <span class="text-[var(--color-text-muted)]">
          Built with <a href="https://astro.build" class="hover:text-[var(--color-accent-primary)] transition-colors" target="_blank" rel="noopener noreferrer">Astro</a>
        </span>
      </div>
    </div>
  </div>
</footer>