---
const navItems = [
  { href: '/', label: 'Home', description: 'Homepage and latest posts' },
  { href: '/about', label: 'About', description: 'Learn more about me' },
  { href: '/blog', label: 'Blog', description: 'All blog posts' },
];

const currentPath = Astro.url.pathname;
---

<nav 
  class="flex flex-col md:flex-row gap-2 md:gap-6" 
  role="navigation"
  aria-label="Primary navigation"
>
  {navItems.map(({ href, label, description }) => {
    const isActive = currentPath === href || 
                    (href !== '/' && currentPath.startsWith(href));
    
    return (
      <a
        href={href}
        class={`nav-link ${isActive ? 'nav-link--active' : ''}`}
        aria-current={isActive ? 'page' : undefined}
        title={description}
      >
        {label}
      </a>
    );
  })}
</nav>