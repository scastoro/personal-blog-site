---
import { getCollection } from 'astro:content';
import PageLayout from '@/layouts/PageLayout.astro';
import PostCard from '@/components/blog/PostCard.astro';
import TagCloud from '@/components/blog/TagCloud.astro';

// Get all blog posts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true; // Exclude drafts in production
});

// Sort posts by publication date (newest first)
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

// Get featured posts
const featuredPosts = sortedPosts.filter(post => post.data.featured);
const regularPosts = sortedPosts.filter(post => !post.data.featured);

// Calculate tag counts
const tagCounts = new Map<string, number>();
allPosts.forEach(post => {
  post.data.tags.forEach(tag => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Convert to tag cloud format
const tags = Array.from(tagCounts.entries()).map(([name, count]) => ({
  name,
  count,
  url: `/blog/tags/${name.toLowerCase()}`
}));

// Recent posts for sidebar
const recentPosts = sortedPosts.slice(0, 5);

// SEO data
const title = "Blog";
const description = "Thoughts on web development, technology, and more. Explore articles about modern web technologies, best practices, and insights from the development world.";
---

<PageLayout title={title} description={description}>
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="py-12 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Latest Articles
          </h1>
          <p class="text-xl md:text-2xl opacity-90 max-w-2xl mx-auto">
            Discover insights on web development, technology trends, and creative solutions
          </p>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 py-12">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Main Content -->
        <div class="lg:w-2/3">
          <!-- Featured Posts -->
          {featuredPosts.length > 0 && (
            <section class="mb-12">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
                <svg class="w-6 h-6 mr-2 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                Featured Articles
              </h2>
              <div class="grid gap-8">
                {featuredPosts.map(post => (
                  <PostCard post={post} featured={true} />
                ))}
              </div>
            </section>
          )}

          <!-- All Posts -->
          <section>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
              <svg class="w-6 h-6 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
              {featuredPosts.length > 0 ? 'All Articles' : 'Recent Articles'}
            </h2>
            
            {regularPosts.length > 0 ? (
              <div class="grid gap-8 md:grid-cols-2">
                {regularPosts.map(post => (
                  <PostCard post={post} />
                ))}
              </div>
            ) : (
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No articles yet</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                  Check back soon for new content!
                </p>
              </div>
            )}
          </section>
        </div>

        <!-- Sidebar -->
        <aside class="lg:w-1/3">
          <div class="space-y-8">
            <!-- Search -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                Search Articles
              </h3>
              <div class="relative">
                <input 
                  type="search" 
                  placeholder="Search articles..." 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                />
                <svg class="absolute right-3 top-2.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
            </div>

            <!-- Tag Cloud -->
            <TagCloud tags={tags} variant="sidebar" />

            <!-- Recent Posts -->
            {recentPosts.length > 0 && (
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                  Recent Articles
                </h3>
                <div class="space-y-4">
                  {recentPosts.map(post => (
                    <article class="border-b border-gray-200 dark:border-gray-700 pb-4 last:border-b-0 last:pb-0">
                      <a href={`/blog/${post.slug}`} class="group block">
                        <h4 class="font-medium text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-2 mb-2">
                          {post.data.title}
                        </h4>
                        <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                          <time datetime={post.data.pubDate.toISOString()}>
                            {post.data.pubDate.toLocaleDateString('en-US', {
                              month: 'short',
                              day: 'numeric',
                              year: 'numeric'
                            })}
                          </time>
                          {post.data.tags.length > 0 && (
                            <>
                              <span class="mx-2">â€¢</span>
                              <span>#{post.data.tags[0]}</span>
                            </>
                          )}
                        </div>
                      </a>
                    </article>
                  ))}
                </div>
              </div>
            )}

            <!-- Newsletter Signup -->
            <div class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900 dark:to-indigo-900 rounded-lg p-6">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                Stay Updated
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">
                Get notified about new articles and updates.
              </p>
              <form class="space-y-3">
                <input 
                  type="email" 
                  placeholder="Enter your email" 
                  class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                />
                <button 
                  type="submit"
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-4 rounded-md transition-colors"
                >
                  Subscribe
                </button>
              </form>
              <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                No spam, unsubscribe at any time.
              </p>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>
</PageLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>