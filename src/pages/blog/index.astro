---
import { getCollection } from 'astro:content';
import PageLayout from '@/layouts/PageLayout.astro';

// Get all blog posts (will be empty for now)
const allPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Sort by date (newest first)
const posts = allPosts.sort((a, b) =>
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<PageLayout
  title="Blog"
  description="Thoughts, tutorials, and insights on web development, technology, and creative projects."
>
  <main class="container py-12">
    <!-- Header -->
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-[var(--color-text-primary)] mb-6">
        Blog
      </h1>
      <p class="text-lg text-[var(--color-text-secondary)] max-w-2xl mx-auto">
        Thoughts, tutorials, and insights on web development, technology, and creative projects.
      </p>
    </div>

    <!-- Blog Content -->
    <div class="max-w-4xl mx-auto">
      {posts.length > 0 ? (
        <!-- Posts will be displayed here when they exist -->
        <div class="grid gap-8">
          {posts.map((post) => (
            <a href={`/blog/${post.slug}`} class="group block">
              <article class="border border-[var(--color-border-default)] rounded-lg p-6 hover:shadow-lg transition-all duration-200 cursor-pointer hover:border-[var(--color-accent-primary)]">
                <h2 class="text-2xl font-semibold mb-3 text-[var(--color-text-primary)] group-hover:text-[var(--color-accent-primary)] transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-[var(--color-text-secondary)] mb-4">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between text-sm text-[var(--color-text-muted)]">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {post.data.tags.length > 0 && (
                    <div class="flex gap-2">
                      {post.data.tags.slice(0, 3).map(tag => (
                        <span class="px-2 py-1 rounded-full bg-[var(--color-bg-muted)] text-xs">
                          #{tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                <!-- Read more indicator -->
                <div class="mt-4 flex items-center text-[var(--color-accent-primary)] group-hover:text-[var(--color-accent-secondary)] font-medium transition-colors">
                  <span>Read more</span>
                  <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </article>
            </a>
          ))}
        </div>
      ) : (
        <!-- Empty state -->
        <div class="text-center py-16">
          <div class="max-w-md mx-auto">
            <div class="w-24 h-24 mx-auto mb-6 flex items-center justify-center rounded-full bg-[var(--color-bg-muted)]">
              <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="text-[var(--color-text-muted)]">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            </div>
            <h2 class="text-2xl font-semibold text-[var(--color-text-primary)] mb-3">
              Coming Soon
            </h2>
            <p class="text-[var(--color-text-secondary)] mb-6">
              I'm working on some great content to share with you. Check back soon for insights on web development, technology trends, and creative projects.
            </p>
            <a
              href="/"
              class="inline-flex items-center gap-2 px-6 py-3 bg-[var(--color-accent-primary)] text-white rounded-lg hover:bg-[var(--color-accent-secondary)] transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-border-focus)]"
            >
              <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Back to Home
            </a>
          </div>
        </div>
      )}
    </div>
  </main>
</PageLayout>